@model IEnumerable<SUNFISH.ViewModels.SummaryTotal>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CloudMemberName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalNumberOfCores)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalRam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalStorage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CloudMemberName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalNumberOfCores)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalRam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalStorage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
