@model IEnumerable<SUNFISH.ViewModels.VirtualNetwork>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressSpace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubnetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubnetAddressRange)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressSpace)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubnetName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubnetAddressRange)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>