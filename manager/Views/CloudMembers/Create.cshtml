@model SUNFISH.ViewModels.New.CloudMemberVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h3>Cloud Member Details</h3>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <h3>Virtual Machine</h3>
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label">VM Name</label>
            <div class="col-md-10">
                <input asp-for="VirtualMachine.Name" class="form-control" />
                <span asp-validation-for="VirtualMachine.Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Operating System</label>
            <div class="col-md-10">
                <select asp-for="VirtualMachine.OperatingSystem" asp-items="Html.GetEnumSelectList<ViewModels.Enums.OperatingSystem>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="VirtualMachine.OperatingSystem" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Storage Disk Type</label>
            <div class="col-md-10">
                <select asp-for="VirtualMachine.StorageDiskType" asp-items="Html.GetEnumSelectList<ViewModels.Enums.StorageDiskType>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="VirtualMachine.StorageDiskType" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}