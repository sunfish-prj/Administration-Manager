@model IEnumerable<SUNFISH.ViewModels.PlanTemplate>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Plan Name
            </th>
            <th>
                Backup Type
            </th>
            <th>
                Cloud Member Name
            </th>
            <th>
                No. of CPU Cores
            </th>
            <th>
                No. of RAM
            </th>
            <th>
                Total Storage Size
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BackupType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CloudMember.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfCores)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfRAM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalStorageSize)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>